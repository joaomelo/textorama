  "description": "plain is a modest text editor",
  "main": "src/index.html",
  "scripts": {
    "start": "vite",
    "test": "cypress open",
    "lint": "eslint \"src/**/*.{js,vue}\"",
    "test:cli": "wait-on -c wait-on.config.json http-get://127.0.0.1:5173/ && cypress run --record",
